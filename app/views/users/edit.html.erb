<div class="container9">
  <h1>プロフィール編集</h1>
  <section class="user-registration">
  <%= form_for @user, url: user_path(@user), method: :patch, html: { multipart: true } do |f| %>
    <div class="form-content">
   
      <%= f.label :nickname, "ニックネーム" %>
      <%= f.text_field :nickname %>
    

    
      <%= f.label :icon_image, "プロフィール画像" %>
      <%= f.file_field :icon_image, class: "form-control-file" %>
  

   
      <%= f.label :self_introduction, "自己紹介" %>
      <%= f.text_area :self_introduction, rows: 4 %>


    <div class="text-center">
      <%= f.submit "更新", class: "btn btn-primary" %>
    </div>
  <% end %>

  <% if @user == current_user %>
  <%= link_to 'アカウントを削除', @user, method: :delete, data: { confirm: '本当に削除しますか？' } %>
<% end %>
  </section>
</div>
